<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#2A4B5E"
        android:padding="116px" />

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="60dp"
        android:layout_height="93dp"
        android:layout_alignBottom="@+id/action_bar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="27dp"
        android:layout_marginEnd="810dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="27dp"
        android:src="@drawable/back_arrow" />

    <TextView
        android:id="@+id/ordersplaced_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="158dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Orders Placed"
        android:textColor="#000000"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/kitchen_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/action_bar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="35dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Kitchen"
        android:textColor="#FFFFFF"
        android:textSize="45sp" />


    <ListView
        android:id="@+id/kitchen_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="-1dp"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="245dp" />


</RelativeLayout>