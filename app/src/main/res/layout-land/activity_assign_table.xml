<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/myConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChooseTableActivity">

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview_smile_happy_restaurant"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.063" />

        <Button
            android:id="@+id/button_table1"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="350dp"
            android:text="@string/button_table_1"
            android:onClick="menu1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_table2"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="350dp"
            android:text="@string/button_table_2"
            android:onClick="menu2"
            app:layout_constraintStart_toEndOf="@+id/button_table1"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_table3"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="350dp"
            android:text="@string/button_table_3"
            android:onClick="menu3"
            app:layout_constraintStart_toEndOf="@+id/button_table2"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_table4"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="350dp"
            android:text="@string/button_table_4"
            android:onClick="menu4"
            app:layout_constraintStart_toEndOf="@+id/button_table3"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_table5"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="350dp"
            android:text="@string/button_table_5"
            android:onClick="menu5"
            app:layout_constraintStart_toEndOf="@+id/button_table4"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_table6"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="100dp"
            android:text="@string/button_table_6"
            android:onClick="menu6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_table1" />

        <Button
            android:id="@+id/button_table7"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="100dp"
            android:text="@string/button_table_7"
            android:onClick="menu7"
            app:layout_constraintStart_toEndOf="@+id/button_table6"
            app:layout_constraintTop_toBottomOf="@+id/button_table2" />

        <Button
            android:id="@+id/button_table8"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="100dp"
            android:text="@string/button_table_8"
            android:onClick="menu8"
            app:layout_constraintStart_toEndOf="@+id/button_table7"
            app:layout_constraintTop_toBottomOf="@+id/button_table3" />

        <Button
            android:id="@+id/button_table9"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="100dp"
            android:text="@string/button_table_9"
            android:onClick="menu9"
            app:layout_constraintStart_toEndOf="@+id/button_table8"
            app:layout_constraintTop_toBottomOf="@+id/button_table4" />

        <Button
            android:id="@+id/button_table10"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="100dp"
            android:text="@string/button_table_10"
            android:onClick="menu10"
            app:layout_constraintStart_toEndOf="@+id/button_table9"
            app:layout_constraintTop_toBottomOf="@+id/button_table5" />

        <Button
            android:id="@+id/button_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh"
            android:onClick="refresh"
            app:layout_constraintBottom_toTopOf="@+id/button_table3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
