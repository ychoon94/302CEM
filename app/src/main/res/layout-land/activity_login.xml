<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <Button
        android:id="@+id/button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/login_button"
        app:layout_constraintTop_toBottomOf="@+id/editText_password"
        tools:layout_editor_absoluteX="593dp" />

    <EditText
        android:id="@+id/editText_password"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="@string/edittext_password_hint"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/editText_username"
        tools:layout_editor_absoluteX="440dp" />

    <EditText
        android:id="@+id/editText_username"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="436dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/edittext_username_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="212dp"
        android:textSize="66dp"
        android:text="SMile HaPPy"
        app:layout_constraintBottom_toTopOf="@+id/editText_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Restaurant"
        android:textSize="36dp"
        app:layout_constraintTop_toBottomOf="@+id/title1"
        tools:layout_editor_absoluteX="553dp" />
</androidx.constraintlayout.widget.ConstraintLayout>